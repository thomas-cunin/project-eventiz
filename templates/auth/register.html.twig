 {% extends 'base.html.twig' %}
{% form_theme form 'tailwind_2_layout.html.twig' %}

{% block title %}Sign Up{% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{asset('assets/css/register-login.css')}}">
{% endblock %}

{% block header %}{% endblock %}
{% block body %}
